{
  "path": {
    "src": "src/",
    "bowerLibs": [
      "components/bower-libs",
      "app-modules/bower-libs"
    ],
    "applicationInfo": "application-info"
  },
    "profiles": {
    "dev": {
      "es6": {
        "prepare": "compiled/es6",
        "public": "public/es6"
      },
      "es5": {
        "prepare": "compiled/es5",
        "public": "public/es5"
      }
    },
    "prod": {
      "angularBase": "/",
      "prepare": "compiled/prod",
      "public": "public/prod",
      "remote": {
      }
    }
  },
  "tasks": [
    {
      "extension": ".css",
      "outputFileName": "site.min.css"
    },
    {
      "extension": ".js",
      "outputFileName": "head.min.js"
    },
    {
      "extension": ".js",
      "outputFileName": "body.min.js"
    }
  ],
  "babelPresets": [
    "es2015"
  ],
  "deployFtp": {
    "remotePlatformValues": [
      "unix",
      "windows"
    ],
    "profiles": {
      "devEs6": {
        "watcher": true,
        "type": "sftp",
        "host": "my-server",
        "port": "22",
        "remotePlatform": "unix",
        "user": "ftp-user",
        "pass": "------",
        "remotePath": "/web/"
      },
      "publish": {
        "type": "sftp",
        "host": "my-server",
        "port": "22",
        "remotePlatform": "unix",
        "user": "ftp-user",
        "pass": "----",
        "remotePath": "/web/public"
      }
    }
  },
  "productionCopy": [
    "src/app-modules/docs/**/*.js",
    "src/app-modules/demo-app/**/*.js"
  ],
  "favicon": "app-modules\\favicon.jpg",
  "fontsFileMasks": [
    "/components/bower-libs/font-awesome/fonts/*.*",
    "/components/bower-libs/bootstrap/fonts/*.*"
  ],
  "configs": {
    "components": {
      "path": "components"
    },
    "app-modules": {
      "path": "app-modules"
    }
  }
}
